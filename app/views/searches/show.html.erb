<% provide(:title, 'All Courses') %>
<div class=text-center>

<h1>Courses</h1>
<% if logged_in? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Code</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @course.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.description %></td>
          <td><%= course.code %></td>
          <td><%= button_to "Enroll", {controller: "courses", action: "enroll", id: course.id, name: course.name }
                              %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h2>You must log in or sign up first</h2>
<% end %>
